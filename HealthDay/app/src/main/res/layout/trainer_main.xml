<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trainer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="application.mobile.healthday.TrainerMain">

    <TextView
        android:text="고객관리"
        android:id="@+id/textView11"
        android:layout_below="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_height="30dp"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="120dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/reservation" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView11"
        android:layout_alignEnd="@+id/textView4"
        android:background="@android:color/white"
        app:srcCompat="@drawable/calendar" />

    <Button
        android:text="로그아웃"
        android:id="@+id/logout"
        android:layout_width="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_height="50dp"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="내 일정"
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="normal|bold"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/imageButton"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Health Day"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="52sp"
        android:textStyle="normal|bold|italic" />

    <ImageButton
        android:id="@+id/t_chatting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="133dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/chat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/t_chatting"
        android:layout_marginTop="-133dp"
        android:text="1:1 채팅"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/manage_c"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignTop="@+id/t_chatting"
        android:background="@android:color/white"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/t_chatting"
        android:layout_marginTop="-133dp"
        android:text="출석확인"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>
