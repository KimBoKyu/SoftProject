<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="application.mobile.healthday.Login">

    <TextView
        android:text="Health Day"
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:textStyle="normal|bold|italic"
        android:textSize="52sp"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwd"
        android:hint="********"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/run"
        android:id="@+id/imageView2"
        android:layout_above="@+id/userNum"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/dumbell"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/bike"
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="비밀번호"
        android:layout_height="30dp"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/login"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@android:color/black" />

    <TextView
        android:text="회원번호"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_width="120dp"
        android:fontFamily="sans-serif"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/userNum"
        android:layout_alignBottom="@+id/userNum"
        android:layout_toStartOf="@+id/imageView3"
        android:textColor="@android:color/black" />

    <Button
        android:text="로그인 하기"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_marginBottom="61dp"
        android:layout_width="130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="150dp"
        android:inputType="textAutoCorrect|textPersonName"
        android:ems="10"
        android:id="@+id/userNum"
        android:hint="회원번호 입력"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/pwd"
        android:layout_alignStart="@+id/pwd"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />


</RelativeLayout>
