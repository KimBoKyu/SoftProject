<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="application.mobile.healthday.UserMain">

    <Button
        android:text="로그아웃"
        android:id="@+id/logout"
        android:layout_width="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/my_info"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="129dp"
        android:background="@android:color/white"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Health Day"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="52sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignTop="@+id/textView11"
        android:text="내 일정"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="242dp"
        android:text="예약/취소"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/my_info"
        android:layout_marginTop="-129dp"
        android:text="1:1 채팅"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/my_info"
        android:layout_below="@+id/my_info"
        android:layout_marginTop="-129dp"
        android:text="나의 정보"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/userReserve"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/textView4"
        android:background="@android:color/white"
        app:srcCompat="@drawable/reservation" />

    <ImageButton
        android:id="@+id/calendar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/my_info"
        android:background="@android:color/white"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/c_chatting"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignTop="@+id/my_info"
        android:background="@android:color/white"
        app:srcCompat="@drawable/chat" />

</RelativeLayout>
