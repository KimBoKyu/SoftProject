<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="application.mobile.healthday.UserInfo">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="내 정보"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        app:srcCompat="@drawable/customer" />

    <TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignTop="@+id/imageView5"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_alignStart="@+id/name"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/counting"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_centerVertical="true"
        android:text="남은 횟수"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="320dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="#ffffff">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView100"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text=".."
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView99"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text=".."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView98"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text=".."
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/info_change"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:text="수정하기"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="TextView"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="최초"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="1주 전"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="현재"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="몸무게"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/weight_p"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/weight_o"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/weight_nch"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/weight_ch"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="골격근량"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bone_p"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bone_o"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bone_nch"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/bone_ch"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:visibility="gone" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="체지방량"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fat_p"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fat_o"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fat_nch"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/fat_ch"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:visibility="gone" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/remain_num"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>